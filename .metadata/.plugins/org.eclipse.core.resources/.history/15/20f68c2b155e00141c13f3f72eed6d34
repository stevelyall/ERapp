package ca.stevenlyall.ersurvey;

import android.app.AlarmManager;
import android.app.Service;
import android.content.Context;
import android.content.Intent;
import android.os.IBinder;
import android.util.Log;

public class SurveyService extends Service {

	AlarmManager am;
	@Override
	public int onStartCommand(Intent intent, int flags, int startId) {
		Log.i("service","SurveyService onStartCommand");
		am = (AlarmManager)this.getSystemService(Context.ALARM_SERVICE);
		am.setInexactRepeating(AlarmManager.ELAPSED_REALTIME_WAKEUP,1000,AlarmManager.INTERVAL_HOUR*2)
		return super.onStartCommand(intent, flags, startId);
	}

	@Override
	public void onDestroy() {
		Log.i("service","SurveyService onDestroy");
		super.onDestroy();
	}

	@Override
	public IBinder onBind(Intent intent) {
		// TODO Auto-generated method stub
		return null;
	}

}
